cp -a * ${BOSH_INSTALL_TARGET}

(
  cd ${BOSH_INSTALL_TARGET}/services/vblob
  bundle_cmd=/var/vcap/packages/ruby/bin/bundle
  $bundle_cmd config build.do_sqlite3 --with-sqlite3-dir=/var/vcap/packages/sqlite
  $bundle_cmd install --local --deployment --without=development test

  cd ${BOSH_INSTALL_TARGET}/warden
  /var/vcap/packages/ruby/bin/bundle --local install --deployment

  chroot_base=/${BOSH_INSTALL_TARGET}/warden/root/linux/base
  mkdir -p ${chroot_base}/rootfs
  tar -C ${chroot_base}/rootfs -zxf /var/vcap/stemcell_base.tar.gz

  env SKIP_DEBOOTSTRAP=true SKIP_APT=true /var/vcap/packages/ruby/bin/bundle exec rake setup
)
