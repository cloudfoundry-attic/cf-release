# abort script on any command that exit with a non zero value
set -e

libevent="libevent-2.0.19-stable"
memcached="memcached-1.4.13"

echo "Building libevent..."
(
  archive=memcached/$libevent.tar.gz
  if [[ -f $archive ]] ; then
    echo "Archive found"
  else
    echo "Archive not found"
    exit 1
  fi

  echo "Extracting archive..."
  tar xzf $archive

  if [[ $? != 0 ]] ; then
    echo "Cannot unpack libevent source"
    exit 1
  fi

  cd $libevent
  ./configure \
    --prefix=${BOSH_COMPILE_TARGET}/libevent
  make
  make install
)

echo "Building memcached..."
(
  archive=memcached/$memcached.tar.gz

  if [[ -f $archive ]] ; then
    echo "Archive found"
  else
    echo "Archive not found"
    exit 1
  fi

  echo "Extracting archive..."
  tar xzf $archive

  if [[ $? != 0 ]] ; then
    echo "Cannot unpack memcached source"
    exit 1
  fi

  cd $memcached
  ./configure \
    --prefix=${BOSH_INSTALL_TARGET} \
    --with-libevent=${BOSH_COMPILE_TARGET}/libevent \
    LDFLAGS="-static"
  make
  make install
)
