# abort script on any command that exit with a non zero value
set -e

if [[ `uname -a` =~ "x86_64" ]] ; then
  dir="loggregator"
  archive=$dir/"loggregatorrouter.gz"
  echo "Using 64-bit version"
else
  echo "Only 64-bit architectures are supported."
  exit 1
fi

if [[ -f $archive ]] ; then
  echo "Archive found"
else
  echo "Archive not found"
  exit 1
fi

echo "Extracting archive..."
gzip -d $archive
chmod 755 $dir/loggregatorrouter

if [[ `./$dir/loggregatorrouter --version 2>&1` =~ "version:" && $? == 0 ]]; then
  cp $dir/loggregatorrouter ${BOSH_INSTALL_TARGET}
else
  echo "Loggregator Router is not properly packaged"
  exit 1
fi
