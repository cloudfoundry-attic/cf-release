#!/bin/bash -e

export PATH=/var/vcap/packages/ruby/bin:$PATH
RUN_DIR=/var/vcap/sys/run/oauth2
LOG_DIR=/var/vcap/sys/log/oauth2
JOB_DIR=/var/vcap/jobs/oauth2
PIDFILE=$RUN_DIR/oauth2.pid

source /var/vcap/packages/common/utils.sh

case $1 in

  start)
    pid_guard $PIDFILE "OAuth2 Service"

    mkdir -p $RUN_DIR
    mkdir -p $LOG_DIR

    echo $$ > $PIDFILE

    <% if properties.syslog_aggregator %>
    /var/vcap/packages/syslog_aggregator/setup_syslog_forwarder.sh $JOB_DIR/config
    <% end %>

    export CONFIG_FILE=$JOB_DIR/config/oauth2.yml

    exec /var/vcap/packages/ruby/bin/ruby \
         /var/vcap/packages/oauth2/oauth2/bin/oauth2-gateway \
         -c $CONFIG_FILE \
         >>$LOG_DIR/oauth2.stdout.log \
         2>>$LOG_DIR/oauth2.stderr.log

    ;;

  stop)
    kill_and_wait $PIDFILE

    ;;

  *)
    echo "Usage: oauth2_ctl {start|stop}" ;;

esac
exit 0
