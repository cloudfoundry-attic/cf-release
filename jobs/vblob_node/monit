check process warden
  with pidfile /var/vcap/sys/run/warden/warden.pid
  start program "/var/vcap/jobs/vblob_node/bin/warden_ctl start"
  stop program "/var/vcap/jobs/vblob_node/bin/warden_ctl stop"
  group vcap

check process vblob_node
  with pidfile /var/vcap/sys/run/vblob_node/vblob_node.pid
  start program "/var/vcap/jobs/vblob_node/bin/vblob_node_ctl start"
  stop program "/var/vcap/jobs/vblob_node/bin/vblob_node_ctl stop"
  group vcap
  depends on warden
