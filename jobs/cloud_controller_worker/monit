<% (1..(p("ccng.jobs.generic.number_of_workers"))).each do |index| %>
check process cloud_controller_jobs_<%= index %>
  with pidfile /var/vcap/sys/run/cloud_controller_worker/cloud_controller_jobs_<%= index %>.pid
  start program "/var/vcap/jobs/cloud_controller_worker/bin/cloud_controller_jobs_ctl start <%= index %>"
  stop program "/var/vcap/jobs/cloud_controller_worker/bin/cloud_controller_jobs_ctl stop <%= index %>"
  group vcap
  if totalmem > 2250 Mb then alert
  if totalmem > 2450 Mb then restart
<% end %>

