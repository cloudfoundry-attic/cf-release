  nats.password:
    description: "Password for NATS login"
  nats.port:
    description: "TCP port of NATS server"
  nats.user:
    description: "User name for NATS login"
  nats.machines:
    description: "IP of each NATS cluster member."
  networks.apps:
    description: "The Login network name"
  uaa.dump_requests:
