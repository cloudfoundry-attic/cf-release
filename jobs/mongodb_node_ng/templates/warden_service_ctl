#!/bin/bash
STOP_TIMEOUT=<%= properties.mongodb_node.instance_stop_timeout || 3 %>
OP=$1
shift
BIN_DIR=$1
shift
BASE_DIR=$1
shift
LOG_DIR=$1
shift
ARGS=$*
PIDFILE=$BASE_DIR/service.pid

source /var/vcap/packages/common/utils.sh
exec 1>> $LOG_DIR/$SCRIPT.log
exec 2>> $LOG_DIR/$SCRIPT.err.log

case $OP in
  start)
    touch $LOG_DIR/mongodb.log
    mkdir -p $BASE_DIR/data
    echo $$ >> $PIDFILE
    exec $BIN_DIR/bin/mongod --dbpath $BASE_DIR/data --logpath $LOG_DIR/mongodb.log --config $BASE_DIR/mongodb.conf $ARGS
    ;;

  stop)
    kill_and_wait $PIDFILE $STOP_TIMEOUT 1
    ;;

  status)
    [ -f $PIDFILE ] && [ -e /proc/`head -1 $PIDFILE` ]
    ;;

  *)
    echo "Usage: $0 {start|stop|status}"

    ;;
esac
