#!/bin/bash
case $1 in
  start)
    shift

    touch /store/log/mongodb.log
    mkdir -p /store/instance/data
    adminpass=$1
    shift
    /usr/share/mongodb/mongodb_proxy/proxyctl -c /etc/mongodb_proxy.yml -p $adminpass &
    version=$1
    shift
    args=$*
    exec /usr/share/mongodb/mongodb-$version/mongod $args --config /etc/mongodb.conf
    ;;

  stop)
    #TODO
    ;;

  status)
    #TODO
    ;;

  *)
    echo "Usage: $0 {start|stop|status}"

    ;;
esac
