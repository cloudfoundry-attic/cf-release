<%
service = "mysql"
plan_enabled = properties.service_plans && properties.service_plans.send(service.to_sym)
plan = properties.plan || "free"
plan_conf = plan_enabled && properties.service_plans.send(service.to_sym).send(plan.to_sym).configuration
use_warden= plan_conf.warden && plan_conf.warden.enable

node = properties.mysql_node
supported_versions = node.supported_versions

version_configs = {
  '5.1' => {
    'name'    => 'mysql',
    'pid'     => '/var/vcap/sys/run/mysqld/mysqld.pid',
    'script'  => '/var/vcap/jobs/mysql_node_ng/bin/mysql_ctl'
  },

  '5.5' => {
    'name'    => 'mysql55',
    'pid'     => '/var/vcap/sys/run/mysqld/mysqld55.pid',
    'script'  => '/var/vcap/jobs/mysql_node_ng/bin/mysql55_ctl',
  }
}
%>
<% if use_warden %>
check process warden
  with pidfile /var/vcap/sys/run/warden/warden.pid
  start program "/var/vcap/jobs/mysql_node_ng/bin/warden_ctl start"
  stop program "/var/vcap/jobs/mysql_node_ng/bin/warden_ctl stop"
  if failed host 127.0.0.1 port 2345 protocol http
    and request '/'
    with timeout 5 seconds for 2 cycles
  then restart
  group vcap
<% else %>
<% supported_versions.each do |version| %>
check process <%= version_configs[version]['name'] %>
  with pidfile <%= version_configs[version]['pid'] %>
  start program "<%= version_configs[version]['script'] %> start"
  stop program "<%= version_configs[version]['script'] %> stop"
  group vcap
<% end %>
<% end %>

check process mysql_node
  with pidfile /var/vcap/sys/run/mysql_node/mysql_node.pid
  start program "/var/vcap/jobs/mysql_node_ng/bin/mysql_node_ctl start"
  stop program "/var/vcap/jobs/mysql_node_ng/bin/mysql_node_ctl stop" with timeout 60 seconds
  group vcap
<%if use_warden %>
  depends on warden
<% else %>
  <% supported_versions.each do |version|  %>
  depends on <%= version_configs[version]['name'] %>
  <% end %>
<% end %>

<%
if properties.service_lifecycle and plan_enabled and plan_conf.lifecycle and plan_conf.lifecycle.enable
  worker_count = plan_conf.lifecycle.worker_count || 1
  worker_count.times do |ind|
%>
check process mysql_worker_<%= ind %>
  with pidfile /var/vcap/sys/run/mysql_node/mysql_worker_<%= ind %>.pid
  start program "/var/vcap/jobs/mysql_node_ng/bin/mysql_worker_ctl start <%= ind %>"
  stop program "/var/vcap/jobs/mysql_node_ng/bin/mysql_worker_ctl stop <%= ind %>"
  group worker
  group vcap

<% if use_warden %>
  depends on warden
<% else %>
  <% supported_versions.each do |version|  %>
  depends on <%= version_configs[version]['name'] %>
  <% end %>
<% end %>
  depends on mysql_node
<%
  end
end
%>
