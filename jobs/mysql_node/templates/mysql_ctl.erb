#!/bin/bash

case $1 in

  start)
    /var/vcap/jobs/mysql_node/bin/create_mysql_tmp_dir
    return_value=$?
    if [ $return_value -ne 0 ]; then
      echo "Failed to create mysql tmp directory"
      exit $return_value
    fi
    /var/vcap/packages/mysql/libexec/mysql.server start /var/vcap/jobs/mysql_node/config/my.cnf

    ;;

  stop)
    /var/vcap/packages/mysql/libexec/mysql.server stop /var/vcap/jobs/mysql_node/config/my.cnf

    ;;

  *)
    echo "Usage: mysql_ctl {start|stop}"

    ;;

esac
