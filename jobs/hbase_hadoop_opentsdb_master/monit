check process hadoop_namenode
  with pidfile /var/vcap/sys/run/hbase_hadoop_opentsdb_master/hadoop-vcap-namenode.pid
  start program "/var/vcap/jobs/hbase_hadoop_opentsdb_master/bin/hadoop_namenode_ctl start"
  stop program "/var/vcap/jobs/hbase_hadoop_opentsdb_master/bin/hadoop_namenode_ctl stop"
  group vcap

check process hbase_zookeeper
  with pidfile /var/vcap/sys/run/hbase_hadoop_opentsdb_master/hbase-vcap-zookeeper.pid
  start program "/var/vcap/jobs/hbase_hadoop_opentsdb_master/bin/hbase_zookeeper_ctl start"
  stop program "/var/vcap/jobs/hbase_hadoop_opentsdb_master/bin/hbase_zookeeper_ctl stop"
  depends on hadoop_namenode
  group vcap

check process hbase_master
  with pidfile /var/vcap/sys/run/hbase_hadoop_opentsdb_master/hbase-vcap-master.pid
  start program "/var/vcap/jobs/hbase_hadoop_opentsdb_master/bin/hbase_master_ctl start"
  stop program "/var/vcap/jobs/hbase_hadoop_opentsdb_master/bin/hbase_master_ctl stop"
  depends on hbase_zookeeper
  group vcap

check process opentsdb
  with pidfile /var/vcap/sys/run/hbase_hadoop_opentsdb_master/opentsdb.pid
  start program "/var/vcap/jobs/hbase_hadoop_opentsdb_master/bin/opentsdb_ctl start"
  stop program "/var/vcap/jobs/hbase_hadoop_opentsdb_master/bin/opentsdb_ctl stop"
  depends on hbase_master
  group vcap
