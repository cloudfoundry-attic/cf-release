#!/bin/bash

JOB_DIR=/var/vcap/jobs/mongodb_node
PKG_DIR=/var/vcap/packages/mongodb_node
BIN_18_DIR=/var/vcap/packages/mongodb18/bin
BIN_20_DIR=/var/vcap/packages/mongodb20/bin

source /var/vcap/packages/mongodb_node/common/services/utils.sh

case $1 in

  start)
    setup_warden

    mkdir -p $ROOT_DIR/usr/share/mongodb/mongodb18
    mkdir -p $ROOT_DIR/usr/share/mongodb/mongodb20

    # Copy mongodb binaries and configuration files to warden base file system
    install -m 0755 -t $ROOT_DIR/usr/bin $JOB_DIR/bin/mongod_startup.sh
    install -m 0755 -t $ROOT_DIR/usr/share/mongodb/mongodb18 $BIN_18_DIR/*
    install -m 0755 -t $ROOT_DIR/usr/share/mongodb/mongodb20 $BIN_20_DIR/*
    install -m 0644 -t $ROOT_DIR/etc     $JOB_DIR/config/mongodb.conf
    install -m 0644 -t $ROOT_DIR/etc/init    $JOB_DIR/config/services.conf

    start_warden
    ;;

  stop)
    kill_and_wait $PIDFILE
    ;;

  *)
    echo "Usage: warden_ctl {start|stop}"
    ;;

esac
