#!/bin/bash

RUN_DIR=/var/vcap/sys/run/warden
LOG_DIR=/var/vcap/sys/log/warden
JOB_DIR=/var/vcap/jobs/mongodb_node
WARDEN_CONF_DIR=/var/vcap/jobs/mongodb_node/config
FIRSTRUN_PATH=$RUN_DIR/firstrun
QUOTA_FS=/var/vcap/data
PIDFILE=$RUN_DIR/warden.pid
WARDEN_SOURCE_DIR=/var/vcap/packages/mongodb_node/warden
MONGODB_BIN_DIR=/var/vcap/packages/mongodb/bin
WARDEN_ROOT_DIR=/var/vcap/packages/mongodb_node/warden/root/linux/base/rootfs/

source /var/vcap/packages/common/utils.sh

case $1 in

  start)
    pid_guard $PIDFILE "Warden"

    mkdir -p $RUN_DIR
    mkdir -p $LOG_DIR
    echo $$ > $PIDFILE

    cd /var/vcap/packages/mongodb_node/warden

    export PATH=/var/vcap/packages/ruby/bin:$PATH

    # Copy mongodb binaries and configuration files to warden base file system
    cp -f $MONGODB_BIN_DIR/* $WARDEN_ROOT_DIR/usr/bin/
    cp -f $JOB_DIR/config/mongodb.conf $WARDEN_ROOT_DIR/etc/mongodb.conf
    chmod 0644 $WARDEN_ROOT_DIR/etc/mongodb.conf
    cp -f $JOB_DIR/bin/mongod_startup.sh $WARDEN_ROOT_DIR/usr/bin
    chmod 0755 $WARDEN_ROOT_DIR/usr/bin/mongod_startup.sh
    cp -f $JOB_DIR/config/services.conf $WARDEN_ROOT_DIR/etc/init/services.conf
    chmod 0644 $WARDEN_ROOT_DIR/etc/init/services.conf

    exec /var/vcap/packages/ruby/bin/bundle exec \
         rake warden:start[$WARDEN_CONF_DIR/warden.yml] \
         >>$LOG_DIR/warden.stdout.log \
         2>>$LOG_DIR/warden.stderr.log

    ;;

  stop)
    kill_and_wait $PIDFILE

    ;;

  *)
    echo "Usage: warden_ctl {start|stop}"

    ;;

esac
