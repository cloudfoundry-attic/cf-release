<%
  rotate = properties.router.logrotate && properties.router.logrotate.rotate
  size = properties.router.logrotate && properties.router.logrotate.size
%>
/var/vcap/sys/log/gorouter/gorouter*.log {
  missingok
  rotate <%= rotate || 7 %>
  compress
  delaycompress
  copytruncate
  size=<%= size || "2M" %>
}
