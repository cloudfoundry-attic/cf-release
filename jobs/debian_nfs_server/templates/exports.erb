<%
  no_root_squash = (properties.debian_nfs_server && properties.debian_nfs_server.no_root_squash) ? ',no_root_squash' : ''
  machine = properties.nfs_server && properties.nfs_server.network # override with specific machine info
  machine ||= spec.networks.send(properties.networks.apps).ip # default to the apps network IP
%>
/var/vcap/store/shared        <%= machine %>(rw,fsid=0,no_subtree_check,sync<%= no_root_squash %>)
