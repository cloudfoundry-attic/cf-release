#!/bin/sh
#

set -e

PATH=/var/vcap/packages/haproxy/bin:$PATH

NAME=haproxy
DAEMON=$(which haproxy)
CONFIG=/var/vcap/jobs/haproxy/config/haproxy.config
DESC="HAProxy"
USER=vcap

INIT_LOG_DIR=/var/vcap/sys/log/haproxy

PID_FILE=/var/vcap/sys/run/haproxy/pid

TIMESTAMP=$(which date)

test -x "${DAEMON}"
test -f "${CONFIG}"

RETVAL=0

ensure_dir() {
    DIR=$1
    if [ ! -d "${DIR}" ] ; then
        mkdir -p "${DIR}"
        chown -R "${USER}":"${USER}" "${DIR}"
        chmod 755 "${DIR}"
    fi
}

ensure_dirs() {
    ensure_dir "$(dirname "${PID_FILE}")"
    ensure_dir "${INIT_LOG_DIR}"
}

remove_pid() {
    rm -f "${PID_FILE}"
    rmdir "$(dirname "${PID_FILE}")" || :
}

start_haproxy() {
    status_haproxy
    if [ "${RETVAL}" = 0 ]; then
        echo "HAProxy is currently running"
    else
        RETVAL=0
        ensure_dirs
        echo "$("${TIMESTAMP}"): Starting HAProxy" >> "${INIT_LOG_DIR}/startup_stdout.log"
        set +e
        "${DAEMON}" -f "${CONFIG}" -D -p "${PID_FILE}" \
            1>> "${INIT_LOG_DIR}/startup_stdout.log" \
            2>> "${INIT_LOG_DIR}/startup_stderr.log" \
            0<&-
        RETVAL=$?
        set -e
        case "${RETVAL}" in
            0)
                echo "$("${TIMESTAMP}"): Finished starting HAProxy" >> "${INIT_LOG_DIR}/startup_stdout.log"
                echo "SUCCESS"
                ;;
            *)
                echo "$("${TIMESTAMP}"): Errored starting HAProxy" >> "${INIT_LOG_DIR}/startup_stdout.log"
                echo "$("${TIMESTAMP}"): Errored starting HAProxy" >> "${INIT_LOG_DIR}/startup_stderr.log"
                remove_pid
                echo "FAILED - check ${INIT_LOG_DIR}/startup_std*.log"
                RETVAL=1
                ;;
        esac
    fi
}

stop_haproxy() {
    status_haproxy
    if [ "${RETVAL}" = 0 ]; then
        set +e
        for pid in $(cat "${PID_FILE}"); do
            kill ${pid} || RETVAL=$?
        done
        set -e
        if [ "${RETVAL}" = 0 ]; then
            remove_pid
        else
            echo "FAILED - check logs"
        fi
    else
        echo "HAProxy not running"
    fi
}

# RETVAL = 0 if running, != 0 if stopped
status_haproxy() {
    if [ -f "${PID_FILE}" ]; then
        RETVAL=0
        set +e
        for pid in $(cat "${PID_FILE}"); do
            kill -0 "${pid}" > /dev/null 2>&1 || RETVAL=3
        done
        kill -0 $(cat "${PID_FILE}") > /dev/null 2>&1
        if [ $? != 0 ]; then
            RETVAL=3
        fi
        set -e
    else
        RETVAL=1
    fi
}

restart_haproxy() {
    stop_haproxy
    start_haproxy
}

case "$1" in
    start)
        echo -n "Starting ${DESC}: "
        start_haproxy
        echo "${NAME}."
        ;;
    stop)
        echo -n "Stopping ${DESC}: "
        stop_haproxy
        echo "${NAME}."
        ;;
    status)
        status_haproxy
        ;;
    force-reload|reload|restart)
        echo -n "Restarting ${DESC}: "
        restart_haproxy
        echo "${NAME}."
        ;;
    *)
        echo "Usage: $0 {start|stop|restart|reload|force-reload}" >&2
        RETVAL=1
        ;;
esac

exit "${RETVAL}"
