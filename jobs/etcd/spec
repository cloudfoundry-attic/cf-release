    description: "Time without recieving a heartbeat before peer should attempt to become leader. See https://coreos.com/docs/cluster-management/debugging/etcd-tuning"
    default: 1000
  leader_ip:
    description: "IP of ETCD cluster leader"
  networks.apps:
